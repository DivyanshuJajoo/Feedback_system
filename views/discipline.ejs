<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Manage Disciplines</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background-color: #eef2f7;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100%;
            background-color: #1a1a2e;
            color: #fff;
            padding: 20px;
            box-sizing: border-box;
        }

        .sidebar h4 {
            text-align: center;
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #9850E4;
            text-transform: uppercase;
        }

        .sidebar a {
            display: block;
            padding: 12px;
            color: #ffffff;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background-color: #9850E4;
            color: #1a1a2e;
        }

        .main {
            margin-left: 260px;
            padding: 20px;
        }

        .main h1,h2 {
            font-size: 28px;
            font-weight: bold;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: #1a1a2e;
            margin-bottom: 20px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            
        }

        .form-control, .btn {
            margin-bottom: 15px;
            border-radius:0px;
        }

        .btn-primary {
            background-color: #9850E4;
            border-color: #9850E4;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #9850E4;
            border-color: #9850E4;
        }

        .btn-secondary {
            background-color: #34495e;
            border-color: #34495e;
        }

        .btn-danger {
            background-color: #e74c3c;
            border-color: #e74c3c;
        }

        .card {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .form-group{
            font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .table-actions {
            display: flex;
            align-items: center;
        }

        .table-actions form {
            margin: 0;
        }

        .table-actions a {
            margin-left: 10px;
        }
        .btn-danger{
          border-radius: 8px;
        }
        .btn-danger:hover{
          background-color:white;
          font-weight: bold;
          border-color:#9850E4;
          color:#9850E4;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
        <a href="/collegeDetails"><i class="fas fa-building"></i> College Details</a>
        <a href="/discipline"><i class="fas fa-book"></i> Discipline</a>
        <a href="/branches"><i class="fas fa-code-branch"></i> Branches</a>
        <a href="/subjects"><i class="fas fa-book-open"></i> Subjects</a>
        <a href="/faculty"><i class="fas fa-user-tie"></i> Faculty</a>
        <a href="/mapping"><i class="fas fa-map"></i> Mapping</a>
        <a href="/server"><i class="fas fa-server"></i> Server</a>
        <a href="/report"><i class="fas fa-chart-line"></i> Report</a>
        <a href="/teacher-remarks"><i class="fas fa-comment"></i> Faculty Remarks</a>
        <form action="/logout?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>

<div class="main">
    
    <!-- Add Discipline -->
    <div class="card">
        <h2>Add New Discipline</h2>
        <form action="/discipline/add" method="POST">
            <div class="form-group">
                <label for="discipline_name">Discipline Name</label>
                <input type="text" id="discipline_name" name="discipline_name" class="form-control" placeholder="Enter discipline name" required>
            </div>
            <div class="form-group">
                <label for="duration">Duration (Years)</label>
                <input type="number" id="duration" name="duration" class="form-control" placeholder="Enter duration in years" min="1" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Discipline</button>
        </form>
    </div>

    <!-- Upload Disciplines -->
    <div class="card">
        <h2>Upload Disciplines via Excel</h2>
        <form action="/discipline/upload" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="disciplineFile">Upload Discipline Excel File:</label>
                <input type="file" id="disciplineFile" name="disciplineFile" class="form-control-file" required>
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>

    <!-- Disciplines List -->
    <div class="card">
        <h2>Disciplines List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Discipline Name</th>
                    <th>Duration (Years)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% disciplines.forEach(discipline => { %>
                    <tr>
                        <td><%= discipline.name %></td>
                        <td><%= discipline.duration %></td>
                        <td class="table-actions">
                            <!-- <form action="/discipline/delete/<%= discipline.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form> -->
                            <a href="/discipline/edit/<%= discipline.id %>" class="btn btn-secondary">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
