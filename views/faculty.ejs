<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/font-awesome.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Admin Page</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background-color: #f8f9fa;
        }

        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #f8f9fa;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 100;
        }

        .header img {
            width: 100%;
            height: auto;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100%;
            background-color: #222;
            color: #fff;
            padding: 10px;
            box-sizing: border-box;
        }

        .sidebar a {
            display: block;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 4px;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main {
            margin-left: 220px; /* Adjust margin-left to account for the width of the sidebar */
            padding: 20px; /* Add some padding for better spacing */
        }

        .form-control, .btn {
            margin-bottom: 15px;
        }

        .btn-primary, .btn-secondary, .btn-danger, .btn-warning {
            margin-right: 10px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-warning {
            background-color: #ffc107;
        }

        .card {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f8f9fa;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .table-actions {
            display: flex;
            align-items: center;
        }

        .table-actions form {
            margin: 0;
        }

        .table-actions a {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="#">Admin</a>
        <a href="/admin">Dashboard</a>
        <a href="/collegeDetails">College Details</a>
        <a href="/discipline">Discipline</a>
        <a href="/branches">Branches</a>
        <a href="/subjects">Subjects</a>
        <a href="/faculty">Faculty</a>
        <a href="/mapping">Mapping</a>
        <a href="/server">Server</a>
        <a href="/report">Report</a>
        <a href="/teacher-remarks">Teacher Remarks</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="main">
        <div class="card">
            <h1>Add Faculty</h1>
            <form action="/faculty/add" method="POST">
                <div class="form-group">
                    <label for="faculty_name">Name*</label>
                    <input type="text" id="faculty_name" name="faculty_name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">Email*</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone*</label>
                    <input type="tel" id="phone" name="phone" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="discipline">Discipline*</label>
                    <select id="discipline_id" name="discipline_id" class="form-control">
                        <option value="">Select Discipline</option>
                        <% disciplines.forEach(discipline => { %>
                            <option value="<%= discipline.id %>"><%= discipline.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="branch">Branch*</label>
                    <select id="branch_id" name="branch_id" class="form-control">
                        <option value="">Select Branch</option>
                        <% branches.forEach(branch => { %>
                            <option value="<%= branch.branch_id %>" data-discipline="<%= branch.discipline_id %>"><%= branch.branch_name %></option>
                        <% }) %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Faculty</button>
            </form>
        </div>

        <div class="card">
            <h1>Upload Faculty Excel File</h1>
            <form action="/faculty/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="file" name="file" accept=".xlsx, .xls" class="form-control-file" required>
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>

        <div class="card">
            <h1>Faculty List</h1>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Branch ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% faculties.forEach((faculty, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= faculty.name %></td>
                                <td><%= faculty.email %></td>
                                <td><%= faculty.phone %></td>
                                <td><%= faculty.branch_id %></td>
                                <td class="table-actions">
                                    <form action="/faculty/delete/<%= faculty.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                    <!-- <a href="/faculty/edit/<%= faculty.id %>" class="btn btn-warning btn-sm">Edit</a> -->
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#discipline_id').on('change', function () {
                var selectedDiscipline = $(this).val();
                $('#branch_id option').each(function () {
                    var branchDisciplineId = $(this).data('discipline');
                    if (selectedDiscipline === "" || branchDisciplineId == selectedDiscipline) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
                $('#branch_id').val('');
            });
        });
    </script>
</body>
</html>
