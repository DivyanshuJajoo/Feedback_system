              function skipSubject(index) {
    // Hide the current faculty feedback section
    document.getElementById('faculty' + index).style.display = 'none';

    // Set bullet point values for the skipped faculty to '11' (to indicate a skip)
    for (let j = 1; j <= 10; j++) {
        document.getElementsByName(`selectedPoint${index}-${j}`)[0].value = 11;
    }

    // Check if we are skipping the last faculty
    if (index === facultiesCount - 1) {
        // If it's the last faculty, submit the form directly
