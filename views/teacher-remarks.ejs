<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

    <title>Teacher Remarks</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100%;
            background-color: #1a1a2e;
            color: #fff;
            padding: 20px;
            box-sizing: border-box;
        }

        .sidebar h4 {
            text-align: center;
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #9850E4;
            text-transform: uppercase;
        }

        .sidebar a {
            display: block;
            padding: 12px;
            color: #ffffff;
            text-decoration: none;
            margin-bottom: 10px;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background-color: #9850E4;
            color: #1a1a2e;
        }

        .main {
            margin-left: 260px;
            padding: 20px;
        }
        .main h1,h2 {
            font-size: 28px;
            font-weight: bold;
            color: #1a1a2e;
            margin-bottom: 20px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            
        }

        .filter-form {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .filter-form label {
            margin-right: 10px;
            font-weight: bold;
        }

        .filter-form select {
            margin-right: 10px;
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            flex-grow: 1;
        }

        .filter-form button {
            padding: 10px 20px;
            background-color: #9850E4;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
            color: #333;
        }

        th {
            background-color: #9850E4;
            color: #fff;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 0.05em;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9ecef;
            transition: background-color 0.3s ease;
        }

        .no-remarks {
            text-align: center;
            padding: 20px;
            background-color: #e9ecef;
            border-radius: 8px;
            font-size: 16px;
            color: #666;
        }
        .btn-danger{
          border-radius: 8px;
        }
        .btn-danger:hover{
          background-color:white;
          font-weight: bold;
          border-color:#9850E4;
          color:#9850E4;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
        <a href="/collegeDetails"><i class="fas fa-building"></i> College Details</a>
        <a href="/discipline"><i class="fas fa-book"></i> Discipline</a>
        <a href="/branches"><i class="fas fa-code-branch"></i> Branches</a>
        <a href="/subjects"><i class="fas fa-book-open"></i> Subjects</a>
        <a href="/faculty"><i class="fas fa-user-tie"></i> Faculty</a>
        <a href="/mapping"><i class="fas fa-map"></i> Mapping</a>
        <a href="/server"><i class="fas fa-server"></i> Server</a>
        <a href="/report"><i class="fas fa-chart-line"></i> Report</a>
        <a href="/teacher-remarks"><i class="fas fa-comment"></i> Faculty Remarks</a>
        <form action="/logout?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>

    <div class="main">
        <div class="card">
            <h1>Faculty Remarks</h1>

            <!-- Filter Form -->
            <form class="filter-form" action="/teacher-remarks" method="get">
                <label for="facultyId">Select Faculty:</label>
                <select name="facultyId" id="facultyId">
                    <option value="" <%= !facultyId ? 'selected' : '' %>>All Faculties</option>
                    <% faculties.forEach(faculty => { %>
                        <option value="<%= faculty.id %>" <%= facultyId && faculty.id.toString() === facultyId.toString() ? 'selected' : '' %>>
                            <%= faculty.name %>
                        </option>
                    <% }) %>
                </select>

                <label for="feedbackYear">Select Year:</label>
                <select name="feedbackYear" id="feedbackYear">
                    <option value="2023" <%= feedbackYear == '2023' ? 'selected' : '' %>>2023</option>
                    <option value="2024" <%= feedbackYear == '2024' ? 'selected' : '' %>>2024</option>
                    <option value="2025" <%= feedbackYear == '2025' ? 'selected' : '' %>>2025</option>

                    <!-- Add more years as needed -->
                </select>

                <button type="submit">Filter</button>
            </form>

            <!-- Feedback Remarks Table -->
            <% if (feedbacks.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Section</th>
                            <th>Branch</th>
                            <th>Faculty Name</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% feedbacks.forEach(feedback => { %>
                            <tr>
                                <td><%= feedback.year %></td>
                                <td><%= feedback.section %></td>
                                <td><%= feedback.branch %></td>
                                <td><%= feedback.faculty_name %></td>
                                <td><%= feedback.response || 'No remarks' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="no-remarks">No remarks available.</div>
            <% } %>
        </div>
    </div>
</body>
</html>
