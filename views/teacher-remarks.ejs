<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/css/styles2.css" rel="stylesheet">

    <title>Faculty Remarks</title>

</head>
<body>
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="/admin"><i class="fas fa-home"></i> Dashboard</a>
        <!-- <a href="/collegeDetails"><i class="fas fa-building"></i> College Details</a> -->
        <a href="/discipline"><i class="fas fa-book"></i> Discipline</a>
        <a href="/branches"><i class="fas fa-code-branch"></i> Branches</a>
        <a href="/subjects"><i class="fas fa-book-open"></i> Subjects</a>
        <a href="/faculty"><i class="fas fa-user-tie"></i> Faculty</a>
        <a href="/mapping"><i class="fas fa-map"></i> Mapping</a>
        <a href="/server"><i class="fas fa-server"></i>  Semester Control</a>
        <a href="/report"><i class="fas fa-chart-line"></i> Report</a>
        <a href="/teacher-remarks" class="active"><i class="fas fa-comment"></i> Faculty Remarks</a>
        <a href="/faculty-feedback"><i class="fas fa-download"></i>Feedback Download</a>
        <form action="/logout?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>
    </div>

    <div class="main">
        <div class="card">
            <h1>Faculty Remarks</h1>

            <!-- Filter Form -->
            <form class="filter-form" action="/teacher-remarks" method="get">
                <label1 for="facultyId">Select Faculty:</label1>
                <select name="facultyId" id="facultyId">
                    <option value="" <%= !facultyId ? 'selected' : '' %>>All Faculties</option>
                    <% faculties.forEach(faculty => { %>
                        <option value="<%= faculty.id %>" <%= facultyId && faculty.id.toString() === facultyId.toString() ? 'selected' : '' %>>
                            <%= faculty.name %>
                        </option>
                    <% }) %>
                </select>

                <label1 for="feedbackYear">Select Year:</label1>
                <select name="feedbackYear" id="feedbackYear">
                    <option value="2023" <%= feedbackYear == '2023' ? 'selected' : '' %>>2022-2023</option>
                    <option value="2024" <%= feedbackYear == '2024' ? 'selected' : '' %>>2023-2024</option>
                    <option value="2025" <%= feedbackYear == '2025' ? 'selected' : '' %>>2024-2025</option>

                    <!-- Add more years as needed -->
                </select>

                <button type="submit">Filter</button>
            </form>

            <!-- Feedback Remarks Table -->
            <% if (feedbacks.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Year</th>
                            <th>Section</th>
                            <th>Branch</th>
                            <th>Faculty Name</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% feedbacks.forEach(feedback => { %>
                            <tr>
                                <td><%= feedback.year %></td>
                                <td><%= feedback.section %></td>
                                <td><%= feedback.branch %></td>
                                <td><%= feedback.faculty_name %></td>
                                <td><%= feedback.response || 'No remarks' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="no-remarks">No remarks available.</div>
            <% } %>
        </div>
    </div>
</body>
<%- include('partials/footer') %>
</html>